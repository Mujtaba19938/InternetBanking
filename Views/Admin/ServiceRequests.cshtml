@model IEnumerable<InternetBanking.Models.ServiceRequest>
@{
    ViewData["Title"] = "Service Requests";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">ðŸ“ž Service Requests</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <strong>No service requests found.</strong> When users submit service requests, they will appear here.
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var request in Model)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <span class="badge @(request.Status == "Pending" ? "bg-warning" : "bg-success")">
                                                @request.Status
                                            </span>
                                            <small class="text-muted">@request.RequestDate.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-title">@request.RequestType</h6>
                                            <p class="card-text"><strong>From:</strong> @request.User.FirstName @request.User.LastName (@request.User.UserName)</p>
                                            <p class="card-text"><strong>Description:</strong> @request.Description</p>
                                            
                                            @if (!string.IsNullOrEmpty(request.AdminResponse))
                                            {
                                                <div class="alert alert-success">
                                                    <strong>Response:</strong> @request.AdminResponse
                                                    <br><small class="text-muted">Responded on: @request.ResponseDate?.ToString("MMM dd, yyyy HH:mm")</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <form asp-action="RespondToServiceRequest" method="post" class="mt-2">
                                                    <input type="hidden" name="id" value="@request.RequestId" />
                                                    <div class="form-group">
                                                        <textarea name="response" class="form-control" rows="3" placeholder="Enter your response..." required></textarea>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary btn-sm mt-2">Send Response</button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 