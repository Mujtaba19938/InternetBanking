@model InternetBanking.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center mb-0">üõ°Ô∏è Admin Login</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Admin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="UserId" class="form-label"></label>
                        <input asp-for="UserId" class="form-control" placeholder="Enter your Admin User ID" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Login as Admin</button>
                </form>
            </div>
        </div>
    </div>
</div> 