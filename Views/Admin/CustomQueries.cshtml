@{
    ViewData["Title"] = "Custom Queries";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">üîç Custom Queries</h3>
                </div>
                <div class="card-body">

                    <div class="alert alert-warning">
                        <strong>‚ö†Ô∏è Security Notice:</strong> Only SELECT queries are allowed for security reasons. 
                        All other query types (INSERT, UPDATE, DELETE, DROP, etc.) are blocked.
                    </div>

                    <form asp-action="ExecuteCustomQuery" method="post">
                        <div class="form-group mb-3">
                            <label for="query" class="form-label">SQL Query:</label>
                            <textarea name="query" id="query" class="form-control" rows="5" placeholder="Enter your SELECT query here..." required></textarea>
                            <small class="form-text text-muted">Example: SELECT * FROM AspNetUsers</small>
                        </div>
                        <button type="submit" class="btn btn-warning">Execute Query</button>
                    </form>

                    @if (ViewBag.ExecutedQuery != null)
                    {
                        <hr>
                        <h5>Query Results:</h5>
                        <div class="alert alert-info">
                            <strong>Executed Query:</strong> @ViewBag.ExecutedQuery
                        </div>
                        
                        @if (ViewBag.QueryResult != null && ViewBag.QueryResult.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead class="table-dark">
                                        <tr>
                                            @foreach (var property in ViewBag.QueryResult[0].GetType().GetProperties())
                                            {
                                                <th>@property.Name</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var row in ViewBag.QueryResult)
                                        {
                                            <tr>
                                                @foreach (var property in row.GetType().GetProperties())
                                                {
                                                    <td>@property.GetValue(row)</td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <p class="text-muted">Total rows: @ViewBag.QueryResult.Count</p>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <strong>No results found.</strong> The query executed successfully but returned no data.
                            </div>
                        }
                    }

                    <hr>
                    <h5>Common Queries:</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6>View All Users</h6>
                                    <code>SELECT UserName, FirstName, LastName, Email FROM AspNetUsers</code>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6>View All Accounts</h6>
                                    <code>SELECT AccountNumber, AccountType, Balance, IsActive FROM Accounts</code>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6>View Service Requests</h6>
                                    <code>SELECT RequestType, Status, RequestDate FROM ServiceRequests</code>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6>View Transactions</h6>
                                    <code>SELECT TransactionType, Amount, TransactionDate, Status FROM Transactions</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 