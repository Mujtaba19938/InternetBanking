@{
    ViewData["Title"] = "Admin Panel";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">üõ°Ô∏è Admin Panel</h3>
                </div>
                <div class="card-body">
                    <!-- Navigation Tabs -->
                    <ul class="nav nav-tabs" id="adminTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab">
                                üîê Login
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab">
                                üìù Register
                            </button>
                        </li>
                    </ul>

                    <!-- Tab Content -->
                    <div class="tab-content mt-3" id="adminTabsContent">
                        <!-- Login Tab -->
                        <div class="tab-pane fade show active" id="login" role="tabpanel">
                            <form action="/admin/login" method="post">
                                @Html.AntiForgeryToken()
                                
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger">
                                        <ul class="mb-0">
                                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <li>@error.ErrorMessage</li>
                                            }
                                        </ul>
                                    </div>
                                }

                                <div class="form-group mb-3">
                                    <label for="loginUserId" class="form-label">Admin User ID</label>
                                    <input name="UserId" id="loginUserId" class="form-control" placeholder="Enter your Admin User ID" required />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="loginPassword" class="form-label">Password</label>
                                    <input name="Password" id="loginPassword" type="password" class="form-control" placeholder="Enter your password" required />
                                </div>

                                <div class="form-check mb-3">
                                    <input name="RememberMe" id="loginRememberMe" type="checkbox" class="form-check-input" />
                                    <label for="loginRememberMe" class="form-check-label">Remember me</label>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Login as Admin</button>
                            </form>
                        </div>

                        <!-- Register Tab -->
                        <div class="tab-pane fade" id="register" role="tabpanel">
                            <form action="/admin/register" method="post">
                                @Html.AntiForgeryToken()
                                
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger">
                                        <ul class="mb-0">
                                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <li>@error.ErrorMessage</li>
                                            }
                                        </ul>
                                    </div>
                                }
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="regUserId" class="form-label">Admin User ID</label>
                                            <input name="UserId" id="regUserId" class="form-control" placeholder="Enter Admin User ID" required />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label for="regEmail" class="form-label">Email Address</label>
                                            <input name="Email" id="regEmail" type="email" class="form-control" placeholder="Enter email address" required />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label for="regPassword" class="form-label">Password</label>
                                            <input name="Password" id="regPassword" type="password" class="form-control" placeholder="Enter password" required />
                                            <small class="form-text text-muted">Must be at least 8 characters with uppercase, lowercase, digit, and special character.</small>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label for="regConfirmPassword" class="form-label">Confirm Password</label>
                                            <input name="ConfirmPassword" id="regConfirmPassword" type="password" class="form-control" placeholder="Confirm password" required />
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="regFirstName" class="form-label">First Name</label>
                                            <input name="FirstName" id="regFirstName" class="form-control" placeholder="Enter first name" required />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label for="regLastName" class="form-label">Last Name</label>
                                            <input name="LastName" id="regLastName" class="form-control" placeholder="Enter last name" required />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label for="regAddress" class="form-label">Address</label>
                                            <input name="Address" id="regAddress" class="form-control" placeholder="Enter address" required />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label for="regDateOfBirth" class="form-label">Date of Birth</label>
                                            <input name="DateOfBirth" id="regDateOfBirth" class="form-control" type="date" required />
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label for="regPhoneNumber" class="form-label">Phone Number</label>
                                            <input name="PhoneNumber" id="regPhoneNumber" class="form-control" placeholder="Enter phone number" required />
                                        </div>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-success w-100">Register as Admin</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-switch to register tab if there are validation errors for registration fields
        @if (ViewData.ModelState.Any(x => x.Key.StartsWith("FirstName") || x.Key.StartsWith("LastName") || x.Key.StartsWith("Email")))
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                var registerTab = new bootstrap.Tab(document.getElementById('register-tab'));
                registerTab.show();
            });
            </text>
        }
    </script>
} 