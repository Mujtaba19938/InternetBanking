@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-2xl p-8 md:p-12 mb-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
        <div>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
                Welcome to <span class="text-blue-600">Secure Internet Banking</span>
            </h1>
            <p class="text-xl text-gray-600 mb-8">
                Your trusted partner for secure online banking services with cutting-edge security and modern convenience.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Login" class="bg-blue-600 text-white px-8 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-lg hover:shadow-xl">
                        Login to Your Account
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="bg-white text-blue-600 px-8 py-3 rounded-xl font-semibold border-2 border-blue-600 hover:bg-blue-50 transition-colors shadow-lg hover:shadow-xl">
                        Open New Account
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Dashboard" class="bg-blue-600 text-white px-8 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-lg hover:shadow-xl">
                        Go to Dashboard
                    </a>
                }
                <a href="#features" class="text-blue-600 px-8 py-3 rounded-xl font-semibold hover:bg-blue-50 transition-colors">
                    Learn More →
                </a>
            </div>
        </div>
        <div class="flex justify-center lg:justify-end">
            <div class="w-64 h-64 bg-blue-100 rounded-2xl flex items-center justify-center">
                <svg class="w-32 h-32 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

