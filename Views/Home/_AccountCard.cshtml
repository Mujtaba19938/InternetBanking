@model InternetBanking.Models.Account

<div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border border-gray-100">
    <div class="flex items-center justify-between mb-4">
        <div class="flex items-center space-x-3">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center @(Model.AccountType == "Savings" ? "bg-green-100" : "bg-blue-100")">
                @if (Model.AccountType == "Savings")
                {
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                }
                else
                {
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                    </svg>
                }
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900">@Model.AccountType Account</h3>
                <p class="text-sm text-gray-500">****@Model.AccountNumber.Substring(Math.Max(0, Model.AccountNumber.Length - 4))</p>
            </div>
        </div>
        
        <div class="text-right">
            <div class="text-2xl font-bold text-gray-900">$@Model.Balance.ToString("N2")</div>
            <div class="text-xs text-gray-500">Available Balance</div>
        </div>
    </div>
    
    <div class="flex space-x-2">
        <a asp-controller="Home" asp-action="AccountDetails" asp-route-accountId="@Model.AccountId"
           class="flex-1 bg-gray-50 hover:bg-gray-100 text-gray-700 text-center py-2 px-4 rounded-lg text-sm font-medium transition-colors duration-200">
            View Details
        </a>
        <a asp-controller="Home" asp-action="TransactionHistory" asp-route-accountId="@Model.AccountId"
           class="flex-1 bg-gray-50 hover:bg-gray-100 text-gray-700 text-center py-2 px-4 rounded-lg text-sm font-medium transition-colors duration-200">
            History
        </a>
    </div>
</div>
