<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: bold;
            color: #dc3545 !important;
        }

        .btn-primary {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-primary:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dc3545;
        }

        .admin-navbar {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
        }

        .admin-navbar .nav-link {
            color: white !important;
        }

        .admin-navbar .nav-link:hover {
            color: #f8f9fa !important;
            background-color: rgba(255,255,255,0.1);
        }

        .admin-navbar .navbar-brand {
            color: white !important;
        }

        .admin-badge {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark admin-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/admin">üõ°Ô∏è Admin Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/manage-admins">Manage Admins</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/service-requests">Service Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/custom-queries">Custom Queries</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    <span class="admin-badge px-2 py-1 rounded">üëë Admin: @User.Identity.Name</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <a href="/" class="btn btn-outline-light btn-sm me-2">üè¶ User Portal</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">üö™ Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Admin Credentials Banner - Only show when not logged in and default credentials are still in use -->
    @if (!User.Identity.IsAuthenticated)
    {
        var adminCredentials = ViewBag.AdminCredentials as InternetBanking.Models.AdminCredentials;
        var showDefaultCredentials = adminCredentials == null || adminCredentials.IsDefault;
        
        if (showDefaultCredentials)
        {
            <div class="alert alert-warning alert-dismissible fade show sticky-top" role="alert" style="margin-bottom: 0; z-index: 1050;">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <strong>üîë Default Admin Credentials:</strong>
                            <span class="ms-2">
                                <strong>Username:</strong> <code>admin</code> | 
                                <strong>Password:</strong> <code>Admin@123</code>
                            </span>
                            <small class="text-muted ms-2">‚ö†Ô∏è Change these credentials for security</small>
                        </div>
                        <div class="col-md-4 text-end">
                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="copyCredentials()">üìã Copy</button>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Admin Panel - Secure Internet Banking
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function copyCredentials() {
            const credentials = 'Username: admin\nPassword: Admin@123';
            navigator.clipboard.writeText(credentials).then(function() {
                // Show temporary success message
                const button = event.target;
                const originalText = button.innerHTML;
                button.innerHTML = '‚úÖ Copied!';
                button.classList.remove('btn-outline-warning');
                button.classList.add('btn-success');
                
                setTimeout(function() {
                    button.innerHTML = originalText;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-warning');
                }, 2000);
            }).catch(function(err) {
                console.error('Could not copy text: ', err);
                alert('Could not copy credentials. Please copy manually:\n\nUsername: admin\nPassword: Admin@123');
            });
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 