@{
    ViewData["Title"] = "Change T-Pin";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">🔑 Change T-Pin</h3>
            </div>
            <div class="card-body">
                <form asp-action="ChangeTransactionPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label for="currentPassword" class="form-label">Current T-Pin</label>
                        <input type="password" name="currentPassword" class="form-control" required 
                               placeholder="Enter your current T-Pin" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="newPassword" class="form-label">New T-Pin</label>
                        <input type="password" name="newPassword" class="form-control" required 
                               placeholder="Enter new T-Pin (minimum 4 characters)" />
                    </div>

                    <div class="form-group mb-4">
                        <label for="confirmPassword" class="form-label">Confirm New T-Pin</label>
                        <input type="password" name="confirmPassword" class="form-control" required 
                               placeholder="Confirm your new T-Pin" />
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Update T-Pin</button>
                    </div>
                </form>

                <div class="mt-4">
                    <div class="alert alert-info">
                        <h6>💡 T-Pin Tips:</h6>
                        <small>
                            • Use a strong, unique T-Pin (minimum 4 characters)<br>
                            • Don't use the same password as your login<br>
                            • This T-Pin will work for all your accounts<br>
                            • If you forget it, you can reset it from your profile
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
