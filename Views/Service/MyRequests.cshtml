@model IEnumerable<InternetBanking.Models.ServiceRequest>
@{
    ViewData["Title"] = "My Service Requests";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>My Service Requests</h2>
        <p class="text-muted mb-0">Track the status of your banking service requests</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary">+ New Request</a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h5 class="mb-0">📋 Request History</h5>
            </div>
            <div class="col-auto">
                <span class="badge bg-info">@Model.Count() requests</span>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Request ID</th>
                                <th>Service Type</th>
                                <th>Description</th>
                                <th>Request Date</th>
                                <th>Status</th>
                                <th>Response</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var request in Model)
                        {
                                    <tr>
                                        <td>
                                            <span class="font-monospace">#@request.RequestId.ToString("D6")</span>
                                        </td>
                                        <td>
                                            <strong>@request.RequestType</strong>
                                        </td>
                                        <td>
                                            <div style="max-width: 200px;">
                                        @if (!string.IsNullOrEmpty(request.Description))
                                        {
                                            if (request.Description.Length > 50)
                                            {
                                                                <span title="@request.Description">
                                                    @request.Description.Substring(0, 50)...
                                                                </span>
                                            }
                                            else
                                            {
                                                @request.Description
                                            }
                                        }
                                        else
                                        {
                                                        <span class="text-muted">No description</span>
                                        }
                                            </div>
                                        </td>
                                        <td>
                                            <small>
                                        @request.RequestDate.ToString("MMM dd, yyyy")<br>
                                                <span class="text-muted">@request.RequestDate.ToString("HH:mm")</span>
                                            </small>
                                        </td>
                                        <td>
                                    @{
                                        var statusClass = request.Status switch
                                        {
                                            "Pending" => "bg-warning text-dark",
                                            "In Progress" => "bg-info",
                                            "Completed" => "bg-success",
                                            "Rejected" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                            <span class="badge @statusClass">@request.Status</span>
                                        </td>
                                        <td>
                                    @if (!string.IsNullOrEmpty(request.AdminResponse))
                                    {
                                                    <div style="max-width: 150px;">
                                            @if (request.AdminResponse.Length > 30)
                                            {
                                                                <span title="@request.AdminResponse">
                                                    @request.AdminResponse.Substring(0, 30)...
                                                                </span>
                                            }
                                            else
                                            {
                                                @request.AdminResponse
                                            }
                                                    </div>
                                        @if (request.ResponseDate.HasValue)
                                        {
                                                            <small class="text-muted d-block">
                                                @request.ResponseDate.Value.ToString("MMM dd, yyyy")
                                                            </small>
                                        }
                                    }
                                    else
                                    {
                                                    <span class="text-muted">Awaiting response</span>
                                    }
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
        }
        else
        {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="display-4">📭</i>
                    </div>
                    <h5>No Service Requests</h5>
                    <p class="text-muted">You haven't made any service requests yet.</p>
                    <a asp-action="Index" class="btn btn-primary">
                        Make Your First Request
                    </a>
                </div>
        }
    </div>
</div>

@if (Model.Any())
{
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="text-warning">@Model.Count(r => r.Status == "Pending")</h5>
                        <small class="text-muted">Pending Requests</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="text-info">@Model.Count(r => r.Status == "In Progress")</h5>
                        <small class="text-muted">In Progress</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="text-success">@Model.Count(r => r.Status == "Completed")</h5>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
            </div>
        </div>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">← Back to Dashboard</a>
</div>
