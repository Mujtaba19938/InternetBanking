@{
    ViewData["Title"] = "Banking Services";
}

@if (ViewBag.PendingRequestsCount >= 5)
{
    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4 mb-6">
        <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-yellow-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <div>
                <h4 class="font-semibold text-yellow-900 mb-1">Maximum Pending Requests Reached!</h4>
                <p class="text-sm text-yellow-800">You have 5 pending service requests. Please wait for responses before submitting new ones.</p>
            </div>
        </div>
    </div>
}

<!-- Modern Page Header -->
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Banking Services</h1>
        <p class="text-gray-600">Manage your banking requests online with ease</p>
    </div>
    
    <!-- Last Login Info -->
    <div class="mt-4 lg:mt-0">
        <div class="bg-gray-50 rounded-xl px-4 py-3">
            <p class="text-sm text-gray-600">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Last login: @DateTime.Now.ToString("MMM dd, yyyy 'at' HH:mm")
            </p>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Services Grid -->
    <div class="lg:col-span-2">
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            <!-- Cheque Book Request -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">📖</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Cheque Book Request</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Request a new cheque book for your account</p>
                </div>
                <button class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Cheque Book Request">
                    Request Now
                </button>
            </div>

            <!-- Address Change -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">🏠</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Address Change</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Update your registered address</p>
                </div>
                <button class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Address Change">
                    Request Now
                </button>
            </div>

            <!-- Stop Payment -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">🛑</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Stop Payment</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Stop payment on issued cheques</p>
                </div>
                <button class="w-full bg-yellow-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-yellow-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Stop Payment">
                    Request Now
                </button>
            </div>

            <!-- Debit Card Request -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">💳</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Debit Card Request</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Request a new or replacement debit card</p>
                </div>
                <button class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Debit Card Request">
                    Request Now
                </button>
            </div>

            <!-- Phone Number Update -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">📞</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Phone Number Update</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Update your registered phone number</p>
                </div>
                <button class="w-full bg-gray-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-gray-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Phone Number Update">
                    Request Now
                </button>
            </div>

            <!-- Other Request -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">❓</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Other Request</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Any other banking service request</p>
                </div>
                <button class="w-full bg-gray-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-gray-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Other Request">
                    Request Now
                </button>
            </div>

            <!-- Account Lock/Unlock -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">🔒</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Account Lock/Unlock</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Lock or unlock your account for security</p>
                </div>
                <button class="w-full bg-red-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-red-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Account Lock/Unlock">
                    Request Now
                </button>
            </div>

            <!-- Email Update -->
            <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between transition hover:shadow-lg hover:scale-105">
                <div>
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
                            <span class="text-2xl">📧</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">Email Update</h3>
                    </div>
                    <p class="text-gray-600 mb-6">Update your registered email address</p>
                </div>
                <button class="w-full bg-yellow-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-yellow-700 transition-colors shadow-md hover:shadow-lg" 
                        data-bs-toggle="modal" data-bs-target="#serviceModal" data-service="Email Update">
                    Request Now
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
        <!-- Request Status -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Request Status
            </h3>
            @if (ViewBag.PendingRequestsCount > 0)
            {
                <div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-4">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-blue-800 font-semibold">@ViewBag.PendingRequestsCount pending request(s)</span>
                    </div>
                </div>
            }
            <p class="text-gray-600 mb-6">Track your service requests and view their current status.</p>
            <a asp-action="MyRequests" class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg text-center block">
                View My Requests
            </a>
        </div>

        <!-- Processing Times -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Processing Times
            </h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="font-medium text-gray-900">Cheque Book</span>
                    <span class="text-sm text-gray-600">3–5 days</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="font-medium text-gray-900">Address Change</span>
                    <span class="text-sm text-gray-600">1–2 days</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="font-medium text-gray-900">Stop Payment</span>
                    <span class="text-sm text-green-600 font-semibold">Immediate</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="font-medium text-gray-900">Debit Card</span>
                    <span class="text-sm text-gray-600">7–10 days</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="font-medium text-gray-900">Phone Update</span>
                    <span class="text-sm text-gray-600">1 day</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="font-medium text-gray-900">Account Lock/Unlock</span>
                    <span class="text-sm text-green-600 font-semibold">Immediate</span>
                </div>
                <div class="flex justify-between items-center py-2">
                    <span class="font-medium text-gray-900">Email Update</span>
                    <span class="text-sm text-gray-600">1 day</span>
                </div>
            </div>
        </div>

        <!-- Need Help? -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"></path>
                </svg>
                Need Help?
            </h3>
            <div class="space-y-4 mb-6">
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">Phone</p>
                        <p class="text-sm text-gray-600">1-800-SECURE-BANK</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">Email</p>
                        <p class="text-sm text-gray-600">support@securebank.com</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
