@model InternetBanking.Models.ViewModels.CashDepositViewModel
@{
    ViewData["Title"] = "Add Funds";
    var accounts = ViewBag.Accounts as List<InternetBanking.Models.Account>;
}

<!-- Modern Page Header -->
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8">
            <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Add Funds</h1>
        <p class="text-gray-600">Choose a secure method to deposit funds into your account</p>
            </div>
    
    <!-- Last Login Info -->
    <div class="mt-4 lg:mt-0">
        <div class="bg-gray-50 rounded-xl px-4 py-3">
            <p class="text-sm text-gray-600">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Last login: @DateTime.Now.ToString("MMM dd, yyyy 'at' HH:mm")
            </p>
        </div>
    </div>
</div>

<!-- Deposit Options Grid -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Cash Deposit -->
    <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between hover:shadow-lg hover:scale-105 transition-all duration-300">
        <div>
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
                    <span class="text-2xl">💵</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900">Cash Deposit</h3>
            </div>
            <p class="text-gray-600 mb-4">Deposit cash at any branch or ATM</p>
            <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Instant availability
                </li>
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    No processing fees
                </li>
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    $50k daily limit
                </li>
                </ul>
        </div>
        <button class="w-full bg-green-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-green-700 transition-colors shadow-md hover:shadow-lg" data-bs-toggle="modal" data-bs-target="#cashDepositModal">
            Deposit Cash
        </button>
    </div>

    <!-- Check Deposit -->
    <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between hover:shadow-lg hover:scale-105 transition-all duration-300">
        <div>
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                    <span class="text-2xl">📄</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900">Check Deposit</h3>
            </div>
            <p class="text-gray-600 mb-4">Deposit checks electronically or at branch</p>
            <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Mobile deposit available
                </li>
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    1–2 day hold
                </li>
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    $100k per check
                </li>
                </ul>
        </div>
        <button class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg" data-bs-toggle="modal" data-bs-target="#checkDepositModal">
            Deposit Check
        </button>
    </div>

    <!-- Wire Transfer -->
    <div class="bg-white rounded-xl shadow-md p-6 flex flex-col justify-between hover:shadow-lg hover:scale-105 transition-all duration-300">
        <div>
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-cyan-100 rounded-full flex items-center justify-center mr-4">
                    <span class="text-2xl">🌐</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900">Wire Transfer</h3>
            </div>
            <p class="text-gray-600 mb-4">Receive wire transfers from other banks</p>
            <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-cyan-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Same-day processing
                </li>
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-cyan-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Secure international
                </li>
                <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-cyan-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    No limits
                </li>
                </ul>
        </div>
        <button class="w-full bg-cyan-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-cyan-700 transition-colors shadow-md hover:shadow-lg" data-bs-toggle="modal" data-bs-target="#wireTransferModal">
            Receive Wire
        </button>
    </div>
</div>

<!-- Additional Information -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Deposit Limits & Fees -->
    <div class="bg-white rounded-xl shadow-md p-6">
        <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Deposit Limits & Fees
        </h3>
        <div class="space-y-3">
            <div class="bg-gray-50 rounded-lg p-3">
                <div class="flex justify-between items-center">
                    <span class="font-medium text-gray-900">Cash Deposit</span>
                    <div class="text-right">
                        <span class="text-sm text-gray-600">$50,000 daily</span>
                        <span class="text-sm text-green-600 ml-4">Free</span>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
                <div class="flex justify-between items-center">
                    <span class="font-medium text-gray-900">Check Deposit</span>
                    <div class="text-right">
                        <span class="text-sm text-gray-600">$100,000 daily</span>
                        <span class="text-sm text-green-600 ml-4">Free</span>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
                <div class="flex justify-between items-center">
                    <span class="font-medium text-gray-900">Wire Transfer</span>
                    <div class="text-right">
                        <span class="text-sm text-gray-600">No limit</span>
                        <span class="text-sm text-red-600 ml-4">$15</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Processing Times -->
    <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Processing Times
        </h3>
        <div class="space-y-4">
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-900">Cash Deposits</h4>
                    <p class="text-sm text-gray-600">Instant after confirmation</p>
                </div>
            </div>
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-900">Check Deposits</h4>
                    <p class="text-sm text-gray-600">1–2 business days hold</p>
                </div>
            </div>
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-900">Wire Transfers</h4>
                    <p class="text-sm text-gray-600">Same day if before 3PM</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cash Deposit Modal -->
<div class="modal fade" id="cashDepositModal" tabindex="-1" aria-labelledby="cashDepositModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content rounded-2xl">
            <form asp-action="CashDeposit" method="post">
                <div class="modal-header bg-green-50 border-b border-green-200 rounded-t-2xl">
                    <h5 class="modal-title text-green-900 font-semibold flex items-center" id="cashDepositModalLabel">
                        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
                            <span class="text-lg">💵</span>
                        </div>
                        Cash Deposit
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-6 p-4 bg-red-50 rounded-xl"></div>

                    <div class="mb-6">
                        <label for="AccountId" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            Deposit to Account
                        </label>
                        <select asp-for="AccountId" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all">
                            <option value="">Select Account</option>
                            @if (accounts != null)
                            {
                                @foreach (var account in accounts)
                                {
                                    <option value="@account.AccountId">
                                        @account.AccountNumber - @account.AccountType (Balance: $@account.Balance.ToString("N2"))
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="AccountId" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div class="mb-6">
                        <label asp-for="Amount" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                            Deposit Amount
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <span class="text-gray-500 text-xl font-semibold">$</span>
                            </div>
                            <input asp-for="Amount" class="w-full pl-8 pr-4 py-4 text-2xl font-bold text-center border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" placeholder="0.00" step="0.01" />
                        </div>
                        <span asp-validation-for="Amount" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div class="mb-6">
                        <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Description (Optional)
                        </label>
                        <textarea asp-for="Description" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" rows="3" placeholder="Enter deposit description"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div class="mb-6">
                        <label asp-for="TransactionPassword" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            Transaction Password
                        </label>
                        <input asp-for="TransactionPassword" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" placeholder="Enter your transaction password" />
                        <span asp-validation-for="TransactionPassword" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                        <div class="flex items-start space-x-3">
                            <svg class="w-6 h-6 text-green-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <h4 class="font-semibold text-green-900 mb-1">Instant Processing</h4>
                                <p class="text-sm text-green-800">Cash deposits are processed immediately and will be available in your account right away.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-gray-50 border-t border-gray-200 rounded-b-2xl p-6">
                    <button type="button" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 transition-colors" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="px-6 py-3 bg-green-600 text-white rounded-xl font-semibold hover:bg-green-700 transition-colors shadow-md hover:shadow-lg">Process Deposit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Check Deposit Modal -->
<div class="modal fade" id="checkDepositModal" tabindex="-1" aria-labelledby="checkDepositModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content rounded-2xl">
            <form asp-action="CheckDeposit" method="post">
                <div class="modal-header bg-blue-50 border-b border-blue-200 rounded-t-2xl">
                    <h5 class="modal-title text-blue-900 font-semibold flex items-center" id="checkDepositModalLabel">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                            <span class="text-lg">📄</span>
                        </div>
                        Check Deposit
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-6">
                    <div class="mb-6">
                        <label for="AccountId" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            Deposit to Account
                        </label>
                        <select name="AccountId" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                            <option value="">Select Account</option>
                            @if (accounts != null)
                            {
                                @foreach (var account in accounts)
                                {
                                    <option value="@account.AccountId">
                                        @account.AccountNumber - @account.AccountType (Balance: $@account.Balance.ToString("N2"))
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-6">
                        <label for="Amount" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                            Check Amount
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <span class="text-gray-500 text-xl font-semibold">$</span>
                            </div>
                            <input name="Amount" type="number" class="w-full pl-8 pr-4 py-4 text-2xl font-bold text-center border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="0.00" step="0.01" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label for="CheckNumber" class="block text-sm font-semibold text-gray-700 mb-3">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                                </svg>
                                Check Number
                            </label>
                            <input name="CheckNumber" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="Enter check number" />
                        </div>

                        <div>
                            <label for="CheckIssuer" class="block text-sm font-semibold text-gray-700 mb-3">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                Check Issuer/Bank (Optional)
                            </label>
                            <input name="CheckIssuer" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="Bank or person issuing check" />
                        </div>
                    </div>

                    <div class="mb-6">
                        <label for="TransactionPassword" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            Transaction Password
                        </label>
                        <input name="TransactionPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="Enter your transaction password" />
                    </div>

                    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
                        <div class="flex items-start space-x-3">
                            <svg class="w-6 h-6 text-yellow-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                            <div>
                                <h4 class="font-semibold text-yellow-900 mb-1">Hold Policy</h4>
                                <p class="text-sm text-yellow-800">Funds may be held for 1-2 business days while the check clears.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-gray-50 border-t border-gray-200 rounded-b-2xl p-6">
                    <button type="button" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 transition-colors" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg">Process Check</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Wire Transfer Modal -->
<div class="modal fade" id="wireTransferModal" tabindex="-1" aria-labelledby="wireTransferModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content rounded-2xl">
            <form asp-action="WireTransfer" method="post">
                <div class="modal-header bg-cyan-50 border-b border-cyan-200 rounded-t-2xl">
                    <h5 class="modal-title text-cyan-900 font-semibold flex items-center" id="wireTransferModalLabel">
                        <div class="w-8 h-8 bg-cyan-100 rounded-full flex items-center justify-center mr-3">
                            <span class="text-lg">🌐</span>
                        </div>
                        Incoming Wire Transfer
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-6">
                    <div class="mb-6">
                        <label for="AccountId" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            Deposit to Account
                        </label>
                        <select name="AccountId" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all">
                            <option value="">Select Account</option>
                            @if (accounts != null)
                            {
                                @foreach (var account in accounts)
                                {
                                    <option value="@account.AccountId">
                                        @account.AccountNumber - @account.AccountType (Balance: $@account.Balance.ToString("N2"))
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-6">
                        <label for="Amount" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                            Wire Amount
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <span class="text-gray-500 text-xl font-semibold">$</span>
                            </div>
                            <input name="Amount" type="number" class="w-full pl-8 pr-4 py-4 text-2xl font-bold text-center border border-gray-300 rounded-xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all" placeholder="0.00" step="0.01" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label for="SenderName" class="block text-sm font-semibold text-gray-700 mb-3">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Sender Name
                            </label>
                            <input name="SenderName" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all" placeholder="Name of person/company sending wire" />
                        </div>

                        <div>
                            <label for="SenderBank" class="block text-sm font-semibold text-gray-700 mb-3">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                Sender Bank
                            </label>
                            <input name="SenderBank" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all" placeholder="Bank sending the wire transfer" />
                        </div>
                    </div>

                    <div class="mb-6">
                        <label for="WireReference" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                            </svg>
                            Wire Reference (Optional)
                        </label>
                        <input name="WireReference" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all" placeholder="Wire reference number" />
                    </div>

                    <div class="mb-6">
                        <label for="TransactionPassword" class="block text-sm font-semibold text-gray-700 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            Transaction Password
                        </label>
                        <input name="TransactionPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all" placeholder="Enter your transaction password" />
                    </div>

                    <div class="bg-cyan-50 border border-cyan-200 rounded-xl p-4">
                        <div class="flex items-start space-x-3">
                            <svg class="w-6 h-6 text-cyan-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <h4 class="font-semibold text-cyan-900 mb-1">Wire Fee</h4>
                                <p class="text-sm text-cyan-800">$15 processing fee applies to incoming wire transfers.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-gray-50 border-t border-gray-200 rounded-b-2xl p-6">
                    <button type="button" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 transition-colors" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="px-6 py-3 bg-cyan-600 text-white rounded-xl font-semibold hover:bg-cyan-700 transition-colors shadow-md hover:shadow-lg">Process Wire</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Back to Dashboard Button -->
<div class="mt-8 text-center">
    <a asp-controller="Home" asp-action="Dashboard" class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Dashboard
    </a>
</div>

